public class main {
    public static void main(String[] args) {
        
        int[] dizi = {9, 3, 5, 6, 3, 1, 4, 1, 10};

        
        System.out.println("Başlangıç dizisi:");
        ArrayProcess.diziYaz(dizi);

        
        dizi = ArrayProcess.elemanEkle(dizi, 5);
        System.out.println("Yeni eleman eklendikten sonra:");
        ArrayProcess.diziYaz(dizi);

        
        dizi = ArrayProcess.elemanSil(dizi);
        System.out.println("İlk eleman silindikten sonra:");
        ArrayProcess.diziYaz(dizi);

        
        int arananEleman = 1;
        System.out.println(arananEleman + " elemanının dizideki sayısı: " + ArrayProcess.diziElemanSay(dizi, arananEleman));

        
        System.out.println(arananEleman + " elemanının indeksleri:");
        int[] indeksler = ArrayProcess.diziArananElemanIndeks(dizi, arananEleman);
        ArrayProcess.diziYaz(indeksler);

      
        System.out.println("Klasik dizi gezinme:");
        ArrayProcess.diziGezinme(dizi);

       
        System.out.println("Öz yinelemeli dizi gezinme:");
        ArrayProcess.recDiziGezinme(dizi, 0);

       
        int aranan = 3;
        int bulunanIndeks = ArrayProcess.diziAra(dizi, aranan);
        if (bulunanIndeks != -1) {
            System.out.println(aranan + " elemanı dizide " + bulunanIndeks + ". indekste bulundu.");
        } else {
            System.out.println(aranan + " elemanı dizide bulunamadı.");
        }

        // Öz yinelemeli arama
        bulunanIndeks = ArrayProcess.recDiziAra(dizi, aranan, 0);
        if (bulunanIndeks != -1) {
            System.out.println(aranan + " elemanı öz yinelemeli aramada " + bulunanIndeks + ". indekste bulundu.");
        } else {
            System.out.println(aranan + " elemanı öz yinelemeli aramada bulunamadı.");
        }
    }
}
